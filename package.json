  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "history": "^5.0.0",
    "ibm-watson": "^6.0.4",
    "if-env": "^1.0.4",
    "mongoose": "^5.5.4",
    "nodemon": "^1.19.0",
    "path": "^0.12.7",
    "react-router-dom": "^5.2.0",
    "socket.io": "^4.0.1"
  }
}
